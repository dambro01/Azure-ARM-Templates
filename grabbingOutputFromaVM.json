{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"commandToExecute": {
			"type": "string",
			"defaultValue": "cat /etc/*release",
			"metadata": {
				"description": "The command to execute."
			}
		}
	},
	"variables": {
		"vmName": "customscriptLinuxVM"
	},
	"resources": [
		{
			"type": "Microsoft.Compute/virtualMachines/extensions",
			"name": "[concat(variables('vmName'),'/installcustomscript')]",
			"apiVersion": "2020-12-01",
			"location": "[resourceGroup().location]",
			"properties": {
				"publisher": "Microsoft.Azure.Extensions",
				"type": "CustomScript",
				"typeHandlerVersion": "2.0",
				"autoUpgradeMinorVersion": true,
				"settings": {
					"commandToExecute": "[parameters('commandToExecute')]"
				}
			}
		}
	],
	"outputs": {
		"CSEOutput": {
			"type": "string",
			"value": "[reference(resourceId('Microsoft.Compute/virtualmachines/extensions', variables('vmName'), 'installcustomscript'), '2022-11-01').instanceView.statuses[0].message]"
		}
	}
}
